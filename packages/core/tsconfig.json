{
  "extends": "../../tsconfig.json",
  "include": ["src/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "paths": {
      "src/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  }
}
