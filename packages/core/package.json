{
  "name": "chiku",
  "version": "0.0.0",
  "description": "(è“„) is a lightweight storage management library designed for handling simple storage operations with multiple storage types, such as IndexedDB, localStorage, and sessionStorage",
  "license": "MIT",
  "author": "Tachibana Shin <tachibshin@duck.com>",
  "module": "dist/main.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./drivers/": "./dist/drivers/",
    "./dist/": "./dist/"
  },
  "typesVersions": {
    "*": {
      "drivers/*": [
        "dist/drivers/*"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "prepublish": "bun run build",
    "publish": "pnpm publish"
  },
  "homepage": "https://github.com/tachibana-shin/chiku/blob/main/packages/core",
  "repository": {
    "type": "git",
    "url": "git://github.com/tachibana-shin/chiku.git"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "tsup": "^8.2.4",
    "vite": "^5.4.4",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "idb-keyval": "^6.2.1"
  }
}